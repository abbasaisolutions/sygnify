# Sygnify Financial Analytics Platform - Enterprise Configuration
# Copy this file to .env and configure with your specific values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
HOST=127.0.0.1
PORT=8000
DEBUG=true
APP_VERSION=2.0.0-enterprise

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ADMIN_API_KEY=your-admin-api-key-change-this-in-production

# =============================================================================
# RATE LIMITING & DDOS PROTECTION
# =============================================================================
RATE_LIMIT_PER_MINUTE=100
BURST_RATE_LIMIT=20
MAX_REQUEST_SIZE=10485760

# =============================================================================
# IP FILTERING
# =============================================================================
IP_WHITELIST_ENABLED=false
WHITELISTED_IPS=
BLACKLISTED_IPS=
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./sygnify_analytics.db
AUTH_DATABASE_URL=sqlite:///./sygnify_users.db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
SESSION_TIMEOUT=1800

# =============================================================================
# AI/ML SERVICES
# =============================================================================
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b-q4_0
OLLAMA_TIMEOUT=30

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
